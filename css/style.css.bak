*{
	
}
#player
{
	width:360px;
	background-color:rgba(233,72,72);
	position:absolute;
	left:50%;
	transform:translateX(-50%);
}
header
{
	text-align:center;
	color:white;
	margin-top:20px;
	height:300px;
}
header img
{
	height:140px;
	
}
header h2
{
	margin:20px 0;
	font-size:35px;
}
header p{
	font-size:22px;
}
#content
{
	background-color:aliceblue;
}
#buttons
{
	display:flex;
	justify-content:center;	
	padding-top: 20px;
}
#buttons img
{	
	width:45px;
	height:45px;
	margin:0 15px;
}
#volume
{
	text-align:center;
}
#volume input
{
	width:100%;
}
input[type="range" i]
{
	-webkit-appearance:none;
	height:4px;
	background-color#e6e7e8;
	margin:0%;	
}
input[type="range"]::-webkit-slider-thumb
{
	-webkit-appearance:none;
	background-color:#e94848;
	height:25px;
	width:25px;
	border-radius:50%;
}
h2{
	margin:15px 0;
}
#color{
	text-align:center;
	margin-top:20px;
}
#color button
{
	width:25px;
	height:25px;
	border-radius:50%;
	border: none;
}
#color1
{
	background:#17a2b8;
}
#color2
{
	background:#e94848;
}
#color3
{
	background:#1bc592;
}
#color4
{
	background:#6c757d;
}

